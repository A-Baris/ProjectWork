@model ReservationCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top: 40px">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1>Müşteri ve Rezervasyon Oluştur</h1>
            <form method="post">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="ReservationDate"></label>
                            <input asp-for="ReservationDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="ReservationDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Müşteri</label>
                            <select asp-items="ViewBag.Customer" asp-for="CustomerId" class="form-control">
                                <option selected="" disable value="">Müşteri</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Masa</label>
                            <select asp-items="ViewBag.Table" asp-for="TableOfRestaurantId" class="form-control">
                                <option selected="" disable value="">Masa Seçimi</option>
                            </select>
                        </div>
                    </div>
                    
                        <div class="form-group">
                            <label asp-for="GuestNumber"></label>
                            <input asp-for="GuestNumber" class="form-control" type="number" />
                            <span asp-validation-for="GuestNumber" class="text-danger"></span>
                        </div>

                    
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CustomerVM.Name"></label>
                            <input asp-for="CustomerVM.Name" class="form-control" />
                            <span asp-validation-for="CustomerVM.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="CustomerVM.Surname"></label>
                            <input asp-for="CustomerVM.Surname" class="form-control" />
                            <span asp-validation-for="CustomerVM.Surname" class="text-danger"></span>
                        </div>
                    </>
                </div>

                <div class="form-group">
                    <label asp-for="CustomerVM.Adress"></label>
                    <input asp-for="CustomerVM.Adress" class="form-control" />
                    <span asp-validation-for="CustomerVM.Adress" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CustomerVM.Phone"></label>
                    <input asp-for="CustomerVM.Phone" class="form-control" />
                    <span asp-validation-for="CustomerVM.Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerVM.Email"></label>
                    <input type="email" asp-for="CustomerVM.Email" class="form-control"  />
                    <span asp-validation-for="CustomerVM.Email" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="margin-top: 10px">Oluştur</button>
                </div>
            </form>
        </div>
    </div>
    </div>

<div class="container" style="margin-left:50px;margin-top: 20px;" >
<input type="date" id="dateInput">
<button id="fetchReservations" class="btn btn-success">Getir</button>

<table class="table table-bordered" id="reservationTable">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Durum</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Misafir Sayısı</th>
            <th>Açıklama</th>
          
        </tr>
    </thead>
    <tbody></tbody>
</table>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script src="~/js/Area/reservation/ReservationDate.js"></script>
</div>
