@model ReservationVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">
            
            <h1>Rezervasyon Güncelle</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="ReservationDate"></label>
                    <input asp-for="ReservationDate" class="form-control" type="datetime" value="@Model.ReservationDate" />
                    <span asp-validation-for="ReservationDate" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label>Müşteri</label>
                    <select asp-items="ViewBag.Customer" asp-for="CustomerId" class="form-control">
                        <option selected="" disable value="@Model.CustomerId">Müşteri</option>
                    </select>

                </div>

                <div class="form-group">
                    <label>Masa</label>
                    <select asp-items="ViewBag.Table" asp-for="TableOfRestaurantId" class="form-control">
                        <option selected="" disable value="@Model.TableOfRestaurantId">Masa Seçimi</option>
                    </select>

                </div>
                <div class="form-group">
                    <label asp-for="GuestNumber"></label>
                    <input asp-for="GuestNumber" class="form-control" value="@Model.GuestNumber" type="number"/>
                    <span asp-validation-for="GuestNumber" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" value="@Model.Description"/>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="ReservationStatus"></label>
                    <select class="form-control" asp-for="ReservationStatus" style="background-color:darkorange">
                        <option>Active</option>
                        <option>Passive</option>
                        <option>Pending</option>
                    </select>
                    <span asp-validation-for="ReservationStatus" class="text-danger"></span>
                    </div>
               
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Güncelle</button>
                </div>

            </form>
        </div>
    </div>
</div>


<div class="container" style="margin-left:50px">
    <input type="date" id="dateInput">
    <button id="fetchReservations" class="btn btn-success">Getir</button>

    <table class="table table-bordered" id="reservationTable">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

 
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <script src="~/js/Area/reservation/ReservationDate.js"></script>
</div>




