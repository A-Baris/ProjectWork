@model TableOfRestaurantVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Table Update</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="TableName"></label>
                    <input asp-for="TableName" class="form-control" value="@Model.TableName" />
                    <span asp-validation-for="TableName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="TableLocation"></label>
                    <input asp-for="TableLocation" class="form-control" value="@Model.TableLocation" />
                    <span asp-validation-for="TableLocation" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="TableCapacity"></label>
                    <input asp-for="TableCapacity" class="form-control" value="@Model.TableCapacity" />
                    <span asp-validation-for="TableCapacity" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Status"></label>
                   
                        <select asp-for="Status" class="form-control">
                            <option value="Passive">Pasif</option>
                            <option value="Active">Aktif</option>
                            <option value="Pending">Beklemede</option>
                        </select>
                      
                    <span asp-validation-for="Status" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label>Waiter Name</label>
                    <select asp-items="ViewBag.Employees" asp-for="EmployeeId" class="form-control">
                        <option selected="" disable value="@Model.EmployeeId"></option>
                    </select>



                </div>
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Update</button>
                </div>

            </form>
        </div>
    </div>
</div>