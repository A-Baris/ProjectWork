@model TableOfRestaurantVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Table Create</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Location"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="TableName"></label>
                    <input asp-for="TableName" class="form-control" />
                    <span asp-validation-for="TableName" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Capacity"></label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label>Waiter Name</label>
                   <select asp-items="ViewBag.Waiters" asp-for="WaiterId" class="form-control">
                       <option selected="" disable>Garson Seçimi</option>
                    </select>
                      
                   

                </div>
                @* <div class="form-group">
                    <label asp-for="TcNo"></label>
                    <input asp-for="TcNo" class="form-control" />
                    <span asp-validation-for="TcNo" class="text-bg-danger"></span>

                </div> *@
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Create</button>
                </div>

            </form>
        </div>
    </div>
</div>


