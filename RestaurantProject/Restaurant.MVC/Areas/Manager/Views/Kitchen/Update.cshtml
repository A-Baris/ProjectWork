@model KitchenVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Kitchen Update</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="KitchenName"></label>
                    <input asp-for="KitchenName" class="form-control" value="@Model.KitchenName" />
                    <span asp-validation-for="KitchenName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" value="@Model.Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
              
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Update</button>
                </div>

            </form>
        </div>
    </div>
</div>