@model DrinkVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>İçecek Güncelle</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="DrinkName"></label>
                    <input asp-for="DrinkName" class="form-control" value="@Model.DrinkName" />
                    <span asp-validation-for="DrinkName" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" value="@Model.Price" />
                    <span asp-validation-for="Price" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control"  value="@Model.Quantity" />
                    <span asp-validation-for="Quantity" class="text-bg-danger"></span>

                </div>
             
                <div class="form-group">
                    <label>İçecek Kategori</label>
                    <select asp-items="ViewBag.CategorySelect" asp-for="DrinkCategoryId" class="form-control">
                        <option selected="" disable value="@Model.DrinkCategoryId">İçecek Kategori Seçimi</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Menu Adı</label>
                    <select asp-items="ViewBag.MenuList" asp-for="MenuId" class="form-control">
                        <option selected="" disable value="@Model.MenuId">Menu  Seçimi</option>
                    </select>

                </div>
                <div class="form-group">
                    <label>Mutfak</label>
                    <select asp-items="ViewBag.KitchenSelect" asp-for="KitchenId" class="form-control">
                        <option selected="" disable value="@Model.KitchenId">Mutfak Seçimi</option>
                    </select>



                </div>

                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Update</button>
                </div>

            </form>
        </div>
    </div>
</div>


