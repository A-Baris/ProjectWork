@model UserVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Kullanıcı Oluştur</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-bg-danger"></span>

                    <div class="form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-bg-danger"></span>

                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="PasswordConfirmed"></label>
                    <input asp-for="PasswordConfirmed" class="form-control" />
                    <span asp-validation-for="PasswordConfirmed" class="text-bg-danger"></span>

                </div>



                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Oluştur</button>
                </div>

            </form>
        </div>
    </div>
</div>




