@model OrderVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Sipariş Güncelle</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" value="@Model.Description" />
                    <span asp-validation-for="Description" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" type="number"  value="@Model.Quantity"/>
                    <span asp-validation-for="Quantity" class="text-bg-danger"></span>

                </div>
                <input asp-for="EmployeeId" class="form-control" type="hidden" value="@Model.EmployeeId" />
                <input asp-for="TableofRestaurantId" class="form-control" type="hidden" value="@Model.TableofRestaurantId" />
                <input asp-for="ProductId" class="form-control" type="hidden" value="@Model.ProductId" />
                <input asp-for="StatusOfOrder" class="form-control" type="hidden" value="@Model.StatusOfOrder" />
                <input asp-for="TotalPrices" class="form-control" type="hidden" value="@Model.TotalPrices" />
              



                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Güncelle</button>
                </div>

            </form>
        </div>
    </div>
</div>


