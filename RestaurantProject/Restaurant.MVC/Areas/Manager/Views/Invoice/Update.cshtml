@model InvoiceVM
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            
            <form method="post">
                <div class="form-group">
                    <label asp-for="InvoiceNumber"></label>
                    <input asp-for="InvoiceNumber" class="form-control" value="@Model.InvoiceNumber"/>
                    <span asp-validation-for="InvoiceNumber" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="InvoiceDate"></label>
                    <input asp-for="InvoiceDate" class="form-control" value="@Model.InvoiceDate" />
                    <span asp-validation-for="InvoiceDate" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" value="@Model.Description" />
                    <span asp-validation-for="Description" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="SubTotal"></label>
                    <input asp-for="SubTotal" class="form-control" value="@Model.SubTotal" id="SubTotalInput" />
                    <span asp-validation-for="SubTotal" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="KDV"></label>
                    <input asp-for="KDV" class="form-control" value="@Model.KDV" id="KDVInput" />
                    <span asp-validation-for="KDV" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="CustomerName"></label>
                    <input asp-for="CustomerName" class="form-control" value="@Model.CustomerName" />
                    <span asp-validation-for="CustomerName" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="CompanyName"></label>
                    <input asp-for="CompanyName" class="form-control" value="@Model.CompanyName" />
                    <span asp-validation-for="CompanyName" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="TaxAdress"></label>
                    <input asp-for="TaxAdress" class="form-control" value="@Model.TaxAdress" />
                    <span asp-validation-for="TaxAdress" class="text-bg-danger"></span>

                </div>

                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Güncelle</button>
                </div>

            </form>
        </div>

    </div>
</div>

<script>

    document.getElementById('SubTotalInput').addEventListener('blur', function () {
        this.value = this.value.replace('.', ',');
    });
    document.getElementById('KDVInput').addEventListener('blur', function () {
        this.value = this.value.replace('.', ',');
    });
</script>