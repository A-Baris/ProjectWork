@model List<Ingredient>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}
<div class="container" style="margin-left:50px">
    <h2>Malzeme Listesi</h2>
    <h2><a href="/manager/ingredient/create"><button class="btn btn-outline-success">Ekle</button></a></h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Malzeme Adı</th>
                <th>Kategori</th>
                <th>Tedarikçi</th>
                <th>Fiyat</th>
                <th>Adet/KG</th>
                
            </tr>
        </thead>
        @foreach (var item in Model)
        {


            <tr>
                <td>@item.Name</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Supplier.CompanyName</td>
                <td>@item.Price</td>
             
                @if(item.Quantity <= 3)
                {
                    <td style="background-color:darkorange">@item.Quantity</td>
                }
                else
                {
                    <td>@item.Quantity</td>
                }
           
               
                <td>
                    <a href="/manager/ingredient/update/@item.Id"><button class="btn btn-outline-primary">Güncelle</button></a>
                    <a href="/manager/ingredient/remove/@item.Id"><button class="btn btn-danger">Sil</button></a>


                </td>



            </tr>


        }

    </table>

</div>