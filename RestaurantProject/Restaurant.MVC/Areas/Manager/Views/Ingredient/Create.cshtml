@model IngredientVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Malzeme Oluştur</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label>Kategori</label>
                    <select asp-items="ViewBag.Category" asp-for="CategoryId" class="form-control">
                        <option selected="" disable>Kategori Seçimi</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Tedarikçi</label>
                    <select asp-items="ViewBag.Supplier" asp-for="SupplierId" class="form-control">
                        <option selected="" disable>Tedarikçi Seçimi</option>
                    </select>
                    </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input id="Price" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-bg-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input id="Quantity" asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-bg-danger"></span>

                </div>
            
            
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Create</button>
                </div>

            </form>
        </div>
    </div>
</div>

<script>

    document.getElementById('Price').addEventListener('blur', function () {
        this.value = this.value.replace('.', ',');
    });
    document.getElementById('Quantity').addEventListener('blur', function () {
        this.value = this.value.replace('.', ',');
    });
  
</script>
