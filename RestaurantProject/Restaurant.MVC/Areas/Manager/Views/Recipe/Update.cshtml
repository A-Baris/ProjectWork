@model RecipeVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="message-container">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            <div class="d-flex justify-content-center align-items-center">
                @TempData["Message"]
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            <div class="d-flex justify-content-center align-items-center">
                @TempData["ErrorMessage"]
            </div>
        </div>
    }
</div>


<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Tarif Güncelle</h1>
            <form method="post">


                <div class="form-group">
                    <label>Adet</label>
                    <select asp-items="ViewBag.ProductSelect" asp-for="ProductId" class="form-control" >
                        <option selected="" disable value="@Model.ProductId">Ürün Seçimi</option>
                    </select>

                </div>
                <div class="form-group">
                    <label></label>
                    <select asp-items="ViewBag.IngredientSelect" asp-for="IngredientId" class="form-control">
                        <option selected="" disable value="@Model.IngredientId">Malzeme Seçimi</option>
                    </select>

                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input id="Quantity" asp-for="Quantity" class="form-control" value="@Model.Quantity"/>
                    <span asp-validation-for="Quantity" class="text-bg-danger"></span>

                </div>
              
               

                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Güncelle</button>
                </div>

            </form>
        </div>
    </div>
</div>

<script>


    document.getElementById('Quantity').addEventListener('blur', function () {
        this.value = this.value.replace('.', ',');
    });

</script>