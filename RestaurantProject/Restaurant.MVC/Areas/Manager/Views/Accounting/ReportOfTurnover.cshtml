
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
    var totalTurnover = 0;
}



@Html.Partial("_ToolbarPartialView")
<div class="container" style="margin-left:50px">
   
    <form method="get" action="/manager/Accounting/reportofturnover">
        <input type="number" name="targetYear" placeholder="Year" />
        <input type="number" name="targetMonth" placeholder="Month" />
        <button class="btn btn-info" type="submit">Göster</button>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Gün</th>
                <th>Toplam Ciro</th>

            </tr>
        </thead>

        @foreach (var item in ViewBag.Weekly)
        {
            totalTurnover += @item.TotalPriceSum;

            <tr>
                <td>@item.DayOfYear</td>
                <td>@item.TotalPriceSum</td>





            </tr>


        }


    </table>
    <h3 align="right">Toplam Ciro : @totalTurnover TL</h3>

</div>

