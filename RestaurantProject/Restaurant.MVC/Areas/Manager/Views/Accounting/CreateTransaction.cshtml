@model TransactionVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

@Html.Partial("_ToolbarPartialView")
<div class="container" style="margin-top:50px">
   

    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Tedarikçi Oluştur</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Debit"></label>
                    <input asp-for="Debit" class="form-control" />
                    <span asp-validation-for="Debit" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Payment"></label>
                    <input asp-for="Payment" class="form-control" />
                    <span asp-validation-for="Payment" class="text-bg-danger"></span>

                </div>


                <div class="form-group">
                    <label asp-for="InvoiceCode"></label>
                    <input asp-for="InvoiceCode" class="form-control" />
                    <span asp-validation-for="InvoiceCode" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="LastPaymentDate"></label>
                    <input asp-for="LastPaymentDate" class="form-control" type="date"/>
                    <span asp-validation-for="LastPaymentDate" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label>Tedarikçi</label>
                    <select asp-items="ViewBag.Supplier" asp-for="SupplierId" class="form-control">
                        <option selected="" disable>Tedarikçi Seçiniz</option>
                    </select>

                </div>

               
              
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Oluştur</button>
                </div>

            </form>
        </div>
    </div>
</div>
