@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:50px">
    <h2>Yemek Listesi</h2>
    <h2><a href="/manager/product/create"><button class="btn btn-outline-success">Ekle</button></a></h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Yemek Adı</th>
                <th>Fiyat</th>   
                <th>Açıklama</th>
                <th>Kategori</th>
                <th>Menu</th>
                <th>Mutfak</th>
                <th>Tedarikçi</th>
            </tr>
        </thead>

        @foreach (var item in ViewBag.DishList as List<Product>)
        {


            <tr>
                <td>@item.ProductName</td>
                <td>@item.Price</td>            
                <td>@item.Description</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Menu?.MenuName</td>
                <td>@item.Kitchen?.KitchenName</td>
                <td>@item.Supplier?.CompanyName</td>
                <td>
                    <a href="/manager/dish/update/@item.Id"><button class="btn btn-outline-primary">Güncelle</button></a>
                    <a href="/manager/dish/remove/@item.Id"><button class="btn btn-danger">Sil</button></a>


                </td>



            </tr>


        }


    </table>

</div>
<br />
<br />
