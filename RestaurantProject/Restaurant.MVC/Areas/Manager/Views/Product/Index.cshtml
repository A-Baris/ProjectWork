@model List<Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:50px">

    <div class="row">
        <div class="col-md-2" style="margin-top:5px">
            <a class="btn btn-outline-primary btn-lg category-button" href="/manager/product/index">Tüm Liste</a>

        </div>
        @foreach (var item in ViewBag.MenuList as List<Menu>)
        {

            <div class="col-md-2" style="margin-top:5px">
                <button class="btn btn-outline-primary btn-lg category-button" data-category="@item.MenuName">@item.MenuName</button>
            </div>





        }


    </div>


    
    <h2><a href="/manager/product/create"><button class="btn btn-outline-success">Ekle</button></a></h2>
    <h2>Yemek Listesi</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Açıklama</th>
                <th>Kategori</th>
                <th>Menu</th>
                <th>Mutfak</th>
                <th>Tedarikçi</th>

            </tr>
        </thead>

        @foreach (var item in Model)
        {
            
           
                <tr class ="product-card" data-category="@item.Menu?.MenuName">
                
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Menu?.MenuName</td>
                <td>@item.Kitchen?.KitchenName</td>
                <td>@item.Supplier?.CompanyName</td>

                <td>
                    <a href="/manager/product/update/@item.Id"><button class="btn btn-outline-primary">Güncelle</button></a>
                    <a href="/manager/product/remove/@item.Id"><button class="btn btn-danger">Sil</button></a>


                </td>

            </tr>


    


        }


    </table>

</div>

<script src="~/js/Menu/menufilter2.js"></script>