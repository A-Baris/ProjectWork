@model ProductVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px" action="/manager/product/create">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Yemek Oluştur</h1>
            <form method="post" action="/manager/product/create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="ProductName"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>


                <div class="form-group">
                    <label>Ürün Görsel</label>
                    <input type="file" class="form-control" name="productImage">
                </div>


                <div class="form-group">
                    <label>Kategori</label>
                    <select asp-items="ViewBag.CategoryList" asp-for="CategoryId" class="form-control">
                        <option selected="" disable value="">Kategori Seçimi</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>


                </div>
                <div class="form-group">
                    <label>Menu Adı</label>
                    <select asp-items="ViewBag.MenuList" asp-for="MenuId" class="form-control">
                        <option selected="" disable value="">Menu  Seçimi</option>
                    </select>
                    <span asp-validation-for="MenuId" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label>Mutfak</label>
                    <select asp-items="ViewBag.KitchenList" asp-for="KitchenId" class="form-control">
                        <option selected="" disable value="">Mutfak Seçimi</option>
                    </select>
                    <span asp-validation-for="KitchenId" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label>Tedarikçi</label>
                    <select asp-items="ViewBag.SupplierList" asp-for="SupplierId" class="form-control">
                        <option selected="" disable value="">Tedarikçi Seçimi</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>

                </div>
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Oluştur</button>
                </div>

            </form>
        </div>
    </div>
</div>






