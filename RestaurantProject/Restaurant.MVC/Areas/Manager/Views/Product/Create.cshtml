@model ProductVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px" action="/manager/reservation/create">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Yemek Oluştur</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="ProductName"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-bg-danger"></span>

                </div>
         
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label>Yemek Kategori</label>
                    <select asp-items="ViewBag.DishCategoryList" asp-for="CategoryId" class="form-control">
                        <option selected="" disable>Yemek Kategori Seçimi</option>
                    </select>

                </div>
                <div class="form-group">
                    <label>Menu Adı</label>
                    <select asp-items="ViewBag.MenuList" asp-for="MenuId" class="form-control">
                        <option selected="" disable>Menu  Seçimi</option>
                    </select>

                </div>
                <div class="form-group">
                    <label>Mutfak</label>
                    <select asp-items="ViewBag.KitchenList" asp-for="KitchenId" class="form-control">
                        <option selected="" disable>Mutfak Seçimi</option>
                    </select>

                </div>
               
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Create</button>
                </div>

            </form>
        </div>
    </div>
</div>

<div class="container" style="margin-left:50px">

    <form method="get" action="/manager/reservation/reservationday">
        <input type="datetime-local" name="testdate" />
        <button class="btn btn-info" type="submit">Göster</button>
    </form>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tarih</th>
                <th>Masa</th>
                <th>Müşteri</th>
                <th>Rez Durum</th>
                <th>Not</th>
                <th></th>



            </tr>
        </thead>

        @foreach (var item in ViewBag.ReservationDay as List<ReservationDayVM>)
        {


            <tr>
                <td>@item.ReservationId</td>
                <td>@item.ReservationDate</td>
                <td>@item.TableName</td>
                <td>@item.CustomerName</td>
                <td>@item.ReservationStatus</td>
                <td>@item.Description</td>
                <td>

                    <a href="/manager/reservation/update/@item.ReservationId"><button class="btn btn-outline-primary">Güncelle</button></a>
                    <a href="/manager/reservation/remove/@item.ReservationId"><button class="btn btn-danger">Sil</button></a>

                </td>



            </tr>


        }


    </table>

</div>





