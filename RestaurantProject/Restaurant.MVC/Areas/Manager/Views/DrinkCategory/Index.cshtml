@model List<DrinkCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:50px">
    <h2>İçecek Kategori Listesi</h2>
    <h2><a href="/manager/drinkcategory/create"><button class="btn btn-outline-success">Ekle</button></a></h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                
                <th>Kategori Adı</th>
                <th>Açıklama</th>

            </tr>
        </thead>
        @foreach (var item in Model)
        {


            <tr>
               
                <td>@item.CategoryName</td>
                <td>@item.Description</td>

                <td>
                    <a href="/manager/drinkcategory/update/@item.Id"><button class="btn btn-outline-primary">Güncelle</button></a>
                    <a href="/manager/drinkcategory/remove/@item.Id"><button class="btn btn-danger">Sil</button></a>


                </td>



            </tr>


        }

    </table>

</div>
