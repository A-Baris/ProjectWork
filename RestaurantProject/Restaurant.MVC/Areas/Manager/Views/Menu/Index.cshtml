@model List<Menu>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-left:50px">
    <h2>Menu Listesi</h2>
    <h2><a href="/manager/menu/create"><button class="btn btn-outline-success">Ekle</button></a></h2>
    <table class="table table-bordered">
        <thead>
            <tr>

                <th>Menu Adı</th>
               

            </tr>
        </thead>
        @foreach (var item in Model)
        {


            <tr>

                <td>@item.MenuName</td>
         

                <td>
                    <a href="/manager/menu/update/@item.Id"><button class="btn btn-outline-primary">Güncelle</button></a>
                    <a href="/manager/menu/remove/@item.Id"><button class="btn btn-danger">Sil</button></a>


                </td>



            </tr>


        }

    </table>

</div>
