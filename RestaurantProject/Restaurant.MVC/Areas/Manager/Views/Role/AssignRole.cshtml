@model List<RoleAssignVM>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AssignRole</h1>

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Rol Atama</h1>
            <form asp-action="AssignRole" asp-route-userId="@ViewBag.UserId" method="post">
       
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="mb-3 form-check">
                        <input type"checkbox" class="form-check-input" asp-for="@Model[i].Exist" />
                        <label class="form-chec-label" for="examplecheck1">@Model[i].Name</label>
                        <input type="hidden" asp-for="@Model[i].Name"/>
                        <input type="hidden" asp-for="@Model[i].Id"/>

                    </div>


                }
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Rol Ata</button>
                </div>

            </form>
        </div>

    </div>
</div>


