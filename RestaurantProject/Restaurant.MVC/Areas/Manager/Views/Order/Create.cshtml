@model OrderCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Sipariş Oluştur</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Status"></label>
                    <input asp-for="Status" class="form-control" />
                    <span asp-validation-for="Status" class="text-bg-danger"></span>

                </div>
            
                <div class="form-group">
                    <label>Yemek Kategori</label>
                    <select asp-items="ViewBag.KitchenSelect" asp-for="KitchenId" class="form-control">
                        <option selected="" disable>xx</option>
                    </select>

                </div>
                <div class="form-group">
                    <label>Menu Adı</label>
                    <select asp-items="ViewBag.EmployeeSelect" asp-for="EmployeeId" class="form-control">
                        <option selected="" disable>xx</option>
                    </select>

                </div>
                <div class="form-group">
                    <label>Mutfak</label>
                    @foreach (var item in ViewBag.TableSelect)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="selectedProducts" value="@item.Value" class="form-check-input" />
                            <label class="form-check-label">@item.Text</label>
                        </div>
                    }

                </div>

                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Create</button>
                </div>

            </form>
        </div>
    </div>
</div>




