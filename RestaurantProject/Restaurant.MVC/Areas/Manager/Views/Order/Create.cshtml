@model OrderCreateVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
   
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Sipariş Oluştur</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="StatusOfOrder"></label>
                    <input asp-for="StatusOfOrder" class="form-control" />
                    <span asp-validation-for="StatusOfOrder" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="TableofRestaurantId"></label>
                    <input asp-for="TableofRestaurantId" class="form-control" />
                    <span asp-validation-for="TableofRestaurantId" class="text-bg-danger"></span>

                </div>

                <div class="form-group">
                    <label>Mutfak</label>
                    <select asp-items="ViewBag.KitchenSelect" asp-for="KitchenId" class="form-control">
                        <option selected="" disable>xx</option>
                    </select>

                </div>
                <div class="form-group">
                    <label>Garson</label>
                    <select asp-items="ViewBag.EmployeeSelect" asp-for="EmployeeId" class="form-control">
                        <option selected="" disable>xx</option>
                    </select>

                </div>

                 <div class="form-group">
                    
                    @foreach (var item in ViewBag.ProductSelect)
                    {
                        <div class="form-check">
                            <input type="checkbox" name="SelectedProductId" value="@item.Value" class="form-check-input" />
                            <label class="form-check-label">@item.Text</label>
                            <input name="Quantity" value="0"/>
                            
                        </div>
                    }
                   
                   
                 
                 </div>



                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Create</button>
                </div>

            </form>
        </div>
    </div>
</div>




