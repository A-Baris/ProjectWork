@model DishVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manager/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Dish Create</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="DishName"></label>
                    <input asp-for="DishName" class="form-control" />
                    <span asp-validation-for="DishName" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" />
                    <span asp-validation-for="Quantity" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-bg-danger"></span>

                </div>
                <div class="form-group">
                    <label>Yemek Kategori</label>
                    <select asp-items="ViewBag.DishCategoryList" asp-for="DishCategoryId" class="form-control">
                        <option selected="" disable>Yemek Kategori Seçimi</option>
                    </select>



                </div>
                <div class="form-group">
                    <label>Mutfak</label>
                    <select asp-items="ViewBag.KitchenList" asp-for="KitchenId" class="form-control">
                        <option selected="" disable>Mutfak Seçimi</option>
                    </select>



                </div>
               
                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Create</button>
                </div>

            </form>
        </div>
    </div>
</div>


