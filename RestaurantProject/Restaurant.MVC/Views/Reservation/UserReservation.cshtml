@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="container" style="margin-top:40px;">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <div id="errorMessageContainer">
            </div>
            <div id="successMessageContainer">
            </div>
            <h1>Reservasyon Oluştur</h1>
            <br />
            <form id="form1" method="post">

                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Reservation.ReservationDate">Rezervasyon Tarihi</label>
                    <input type="datetime-local" id="Reservation.ReservationDate" name="Reservation.ReservationDate" class="form-control">
                    <div id="errorMessage" class="alert alert-danger" style="display:none;"></div>
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Reservation.GuestNumber">Misafir Sayısı</label>
                    <input type="number" id="Reservation.GuestNumber" name="Reservation.GuestNumber" class="form-control">
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Reservation.Description">Not</label>
                    <input type="text" id="Reservation.Description" name="Reservation.Description" class="form-control">
                </div>
                <div class="form-group d-flex flex-column align-items-center">

                    <input type="email" id="Customer.Email" name="Customer.Email" class="form-control" value="@ViewBag.UserEmail" hidden>
                </div>

                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Customer.Adress">Adres</label>
                    <input type="text" id="Customer.Adress" name="Customer.Adress" class="form-control">
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Customer.Phone">Telefon</label>
                    <input type="text" id="Customer.Phone" name="Customer.Phone" class="form-control">
                </div>

                <div class="form-group d-flex flex-column align-items-center">
                    <button class="btn btn-info" type="submit" style="margin-top:10px">Oluştur </button>
                </div>
            </form>





        </div>
    </div>
</div>


<script src="~/testpostreservation.js"></script>
<div style="height:350px">

</div>









