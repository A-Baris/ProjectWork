@model ReservationModel
@{
    ViewData["Title"] = "UserReservationUpdate";
    Layout = "~/Views/Shared/_LayoutRestoran.cshtml";
}


<div id="errorMessageContainer">
</div>

<div id="successMessageContainer">
</div>
<form id="updateForm" method="post">
    <div class="form-group">
        <label asp-for="ReservationDate"></label>
        <input asp-for="ReservationDate" class="form-control" type="datetime-local" name="ReservationUpdateDTO.ReservationDate" value="@Model.ReservationDate" />
        <span asp-validation-for="ReservationDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="GuestNumber"></label>
        <input asp-for="GuestNumber" class="form-control" type="text" name="ReservationUpdateDTO.GuestNumber" value="@Model.GuestNumber" />
        <span asp-validation-for="GuestNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" type="text" name="ReservationUpdateDTO.Description" value="@Model.Description" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" type="tel" name="CustomerDTO.Phone" value="@Model.Phone" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adress"></label>
        <input asp-for="Adress" class="form-control" type="text" name="CustomerDTO.Adress" value="@Model.Adress" />
        <span asp-validation-for="Adress" class="text-danger"></span>
    </div>
    <div class="form-group">
       
        <input asp-for="Email" class="form-control" type="email" name="CustomerDTO.Email" value="@Model.Email" hidden />
        
    </div>

    <div class="form-group">
       
        <input asp-for="Id" class="form-control" name="ReservationUpdateDTO.Id" value="@Model.Id" hidden />
       
    </div>




    <div class="form-group d-flex flex-column align-items-center">
       <button class="btn btn-info" type="submit" style="margin-top:10px">Güncelle </button>
    </div>
  
</form>

<script src="~/js/Reservation/updatereservation.js"></script>