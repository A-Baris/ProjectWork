@model ProfileVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutRestoran.cshtml";
}

<div class="text-center">
    <button id="editButton" class="btn btn-primary" style="margin-top:10px">Düzenle</button>
</div>
<div class="container" style="margin-top:40px">
    

    <div class="row justify-content-center">

        <div class="col-md-4">
            <form method="post" asp-controller="userprofile" asp-action="updateprofile">

                <div class="form-group">
                    <label>Kullanıcı Adı: </label>
                    <input class="form-control" name="UserName" value="@Model?.UserName" disabled />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Ad </label>
                    <input class="form-control" name="CustomerName" value="@Model?.CustomerName" disabled />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Soyad </label>
                    <input class="form-control" name="CustomerSurname" value="@Model?.CustomerSurname" disabled />
                    <span asp-validation-for="CustomerSurname" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label>Email: </label>
                    <input class="form-control" name="Email" value="@Model?.Email" disabled />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Telefon No: </label>
                    <input class="form-control" name="PhoneNumber" value="@Model?.PhoneNumber" disabled />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>



           @*      <div class="form-group">
                    <label>Password: </label>
                    <input type="password" class="form-control" name="PasswordHash" value="@Model?.PasswordHash" disabled />
                    <span asp-validation-for="PasswordHash" class="text-bg-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="PasswordConfirmed"></label>
                    <input asp-for="PasswordConfirmed" class="form-control" />
                    <span asp-validation-for="PasswordConfirmed" class="text-bg-danger"></span>

                </div> *@


                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Güncelle</button>

                </div>
            </form>
        </div>
    </div>


</div>



<script>
    $(document).ready(function () {
        // Function to enable input fields
        function enableInputs() {
            $("input[disabled]").prop("disabled", false);
        }

        // Click event for the "Edit" button
        $("#editButton").click(function () {
            enableInputs();
        });
    });
</script>