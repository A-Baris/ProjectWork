@model SecurityProfileVM
@{
    ViewData["Title"] = "SecurityProfile";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">

        <div class="col-md-4">
            <h2>Şifre Güncelleme</h2>
            <form method="post" asp-controller="userprofile" asp-action="securityprofile">

                <div class="form-group">
                    <label>Güncel Şifre: </label>
                    <input type="password" class="form-control" name="PasswordNow" />
                    <span asp-validation-for="PasswordNow" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Yeni Şifre: </label>
                    <input type="password" class="form-control" name="PasswordHash"   />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label>Yeni Şifre(Tekrar): </label>
                    <input asp-for="PasswordConfirmed" class="form-control" />
                    <span asp-validation-for="PasswordConfirmed" class="text-danger"></span>

                </div>


                <div class="text-center">

                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Güncelle</button>

                </div>

            </form>
        </div>
    </div>


</div>