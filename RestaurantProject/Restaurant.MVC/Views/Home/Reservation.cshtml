@{
    ViewData["Title"] = "Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<body style="background-color: darksalmon;">

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Reservasyon Oluştur</h1>
            <br />
            <form id="form1" method="post">

                <div class="form-group d-flex flex-column align-items-center">
                    <label for="ReservationDate" >Rezervasyon Tarihi</label>
                    <input type="datetime-local" id="ReservationDate" name="ReservationDate" class="form-control">
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Description">Not</label>
                    <input type="text" id="Description" name="Description" class="form-control">
                </div>

            </form>
   

            <form id="form2" method="post">

                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Name" >Ad</label>
                    <input type="text" id="Name" name="Name" class="form-control">
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Surname">Soyad</label>
                    <input type="text" id="Surname" name="Surname" class="form-control">
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Adress">Adres</label>
                    <input type="text" id="Adress" name="Adress" class="form-control">
                </div>
                <div class="form-group d-flex flex-column align-items-center">
                    <label for="Phone">Telefon</label>
                    <input type="number" id="Phone" name="Phone" class="form-control">
                </div>
                <div class="text-center">
                    <button class="btn btn-info" id="submitButton" style="margin-top:10px">Submit</button>
                </div>


            </form>
            <script src="~/testpostreservation.js"></script>
        </div>

    </div>
</div>

 
</body>








