@{
    ViewData["Title"] = "ForgottenPassword";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<div class="container" style="margin-top:60px">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <h1>Şifremi Unuttum</h1>
            <h6>Lütfen sisteme kayıtlı Email adresinizi giriniz. 
                Email adresinize gelecek linke tıklayarak şifre yenileme işlemini gerçekleştirebilirsiniz.
                </h6>
            <br />

            <form method="post" asp-controller="home" asp-action="ForgottenPassword">
                <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" required class="form-control" />            
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Gönder</button>
                </div>
            </form>
        </div>
    </div>


</div>