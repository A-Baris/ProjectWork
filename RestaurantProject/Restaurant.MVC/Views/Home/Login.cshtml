@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}


<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <h1>Giriş</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="text-center">

                        <button type="submit" class="btn btn-primary" style="margin-top:10px">Giriş Yap</button>
                        <button type="submit" class="btn btn-danger" style="margin-top:10px" asp-action="GoogleLogin">Google ile giriş</button>
                   
                    </div>
                    </div>

            </form>
            <div class="row" style="margin-top:15px">
                <a href="/home/register" class="btn btn-info btn-block">Kayıt Ol</a>
            </div>
         
            
</div>
</div>
</div>