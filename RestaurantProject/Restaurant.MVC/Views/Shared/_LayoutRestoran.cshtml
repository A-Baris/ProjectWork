<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

</head>
<body>
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Restaurant.MVC</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Restaurant.MVC.styles.css" asp-append-version="true" />
        <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </head>
    <body>

        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-4 px-lg-5 py-3 py-lg-0 sticky-top shadow-sm">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MyRestaurant</a>
                   
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                           
                        </ul>
                        <div>
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="about">Hakkımızda</a>
                            <a class="navbar-brand" asp-area="" asp-controller="Menu" asp-action="index">Menu</a>
                            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="contact">İletişim</a>
                            <a class="navbar-brand" asp-area="" asp-controller="Reservation" asp-action="UserReservation">Rezervasyon</a>
                        </div>
                        <div>
                          

                            @if (User.Identity.IsAuthenticated)
                            {

                                <h3 style="color:white">@User.Identity.Name</h3>

                                <a href="/home/logout">Çıkış</a>
                                
                                <a href="/UserProfile/profiledetail" style="margin-left:15px">Profil</a>
                            }
                            else
                            {
                                <a href="/home/Login">Üye Giriş</a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container-fluid">
            <div class="row">
                <!-- Vertical Navbar (left side) -->
                <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar" style="background-color:gray">
                    <div class="position-sticky">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link active" href="/userprofile/profiledetail">
                                    Profil Detay
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/userprofile/securityprofile">
                                    Profil Gizlilik
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/userprofile/myreservation">
                                    Rezervasyonlarım
                                </a>
                            </li>
                            <!-- Add more menu items as needed -->
                        </ul>
                    </div>
                </nav>



                <main role="main" class="col-md-9">
                    <div style="height: 950px;">
                        <div class="message-container">
                            @if (TempData["Message"] != null)
                            {
                                <div class="alert alert-success">
                                    <div class="d-flex justify-content-center align-items-center">
                                        @TempData["Message"]
                                    </div>
                                </div>
                            }

                            @if (TempData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">
                                    <div class="d-flex justify-content-center align-items-center">
                                        @TempData["ErrorMessage"]
                                    </div>
                                </div>
                            }
                        </div>
                        @RenderBody()
                    </div>

                </main>



            </div>
        </div>

        <footer class="border-top footer text-muted" style="background-color:ghostwhite">
            <div class="container-fluid px-4">
                <div class="d-flex align-items-center justify-content-between small">
                    <div class="text-muted">Copyright © Your Website 2023</div>
                    <div>
                        <a href="#">Privacy Policy</a>
                        ·
                        <a href="#">Terms &amp; Conditions</a>
                    </div>
                </div>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>

</body>


<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

</html>